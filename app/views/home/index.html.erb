<h1>Pousadaria</h1>

<section id="inns">
  <div class="row">
  <% @inns.each do |inn| %>
    <div class="col-4" id='inn_<%= inn.id %>'>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= link_to inn.name, inn %></h5>
        </div>
      </div>
      <%= button_to 'Adicionar aos Favoritos', favorite_inn_dashboard_inns_path, method: :post %>
    </div>
  <% end %>
  </div>

  <div>
    <%= link_to 'Adicionar Lista', new_list_path %>
    <%= link_to 'Listas', lists_path %>
  </div>
</section>